ul.pagination(ng-if='1 < pages.length || !autoHide')
	li.page-item(ng-if='boundaryLinks', ng-class='{ disabled : pagination.current == 1 }')
		a.page-link(href='', ng-click='setCurrent(1)') &laquo;
	li.page-item(ng-if='directionLinks', ng-class='{ disabled : pagination.current == 1 }')
		a.page-link(href='', ng-click='setCurrent(pagination.current - 1)') &lsaquo;
	li.page-item(ng-repeat='pageNumber in pages track by tracker(pageNumber, $index)', ng-class="{ active : pagination.current == pageNumber, disabled : pageNumber == '...' }")
		a.page-link(href='', ng-click='setCurrent(pageNumber)') {{ pageNumber }}
	li.page-item(ng-if='directionLinks', ng-class='{ disabled : pagination.current == pagination.last }')
		a.page-link(href='', ng-click='setCurrent(pagination.current + 1)') &rsaquo;
	li.page-item(ng-if='boundaryLinks', ng-class='{ disabled : pagination.current == pagination.last }')
		a.page-link(href='', ng-click='setCurrent(pagination.last)') &raquo;
