#add.controllerWrapper(ng-controller='words as enVM')
	.section.mt-0
		.container-fluid(ng-if="rVM.Auth.isAdmin")
			.row
				.col-12.px-3.mt-4
					.col.py-3.px-5.pointerCursor.sectionHeader(data-toggle="collapse", role="button", data-target="#addCollapse", aria-expanded="true", aria-controls="addCollapse", filter-color="black")
						h4.m-0.text-white.text-capitalize {{rVM.Lang.lang.add}}
							i.float-right.fas.fa-chevron-down
					#addCollapse.show.collapse.col.p-4.bg-white
						form.col
							.row.justify-content-center.mb-5
								.col-12.col-sm-12.col-md-6.col-lg-6.col-xl-6
									.form-group
										label.text-muted {{rVM.Lang.lang[enVM.schema.type._$label]}}:
										select.form-control(ng-options="item.value as rVM.Lang.lang[item.option] for item in enVM.schema.type._$options", ng-model="type")
						
								.col-12
									a.btn.btn-primary.btn-block(ui-sref="base.addWord({type: type})") {{rVM.Lang.lang.add}}
		
		.container-fluid
			.row
				.col-12.px-3.mt-4
					.col.py-3.px-5.pointerCursor.sectionHeader(data-toggle="collapse", role="button", data-target="#filterCollapse", aria-expanded="true", aria-controls="translateCollapse", filter-color="black")
						h4.m-0.text-white.text-capitalize {{rVM.Lang.lang.search}} {{rVM.Entity.insert.living}}
							i.float-right.fas.fa-chevron-down
					#filterCollapse.show.collapse.col.p-4.bg-white
						form.col(ng-submit="enVM.Entity.doSearch();")
							.row.justify-content-center.mb-5
								.col-12.col-sm-12.col-md-6.col-lg-6.col-xl-6
									.form-group
										label.text-muted {{rVM.Lang.lang.docType}}:
										select.form-control(ng-options="item.value as rVM.Lang.lang[item.option] for item in enVM.schema.type._$options track by item.value", ng-model="enVM.Entity.search.type")
								.col-12
									button.btn.btn-primary.btn-block(type="submit") {{rVM.Lang.lang.search}}
		include ./include/search.pug
		include ./include/update.pug